
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >

    <View
        android:layout_width="match_parent"

        android:layout_height="match_parent"
        android:background="#000"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">



        <TextView
            android:id="@+id/calcDisplay"
            android:layout_width="fill_parent"
            android:layout_weight="1.180"
            android:layout_height="0dp"
            android:textSize="65sp"
            android:fontFamily="sans-serif-thin"
            android:text="0"
            android:textColor="#ffff"
            android:gravity="end"
            android:paddingTop="20dp"
            android:layout_marginRight="23dp"
            android:layout_marginEnd="23dp"
            />

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_weight="4"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:layout_marginTop="0dp"
            android:background="#f5f5f5"

            >

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:orientation="vertical">


                <Button
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:background="@drawable/a_little_darker"
                    android:fontFamily="sans-serif-light"

                    android:onClick="reset"
                    android:text="AC"
                    android:textSize="30sp"
                    />


                <Button
                    android:id="@+id/seven"
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:layout_height="0dp"
                    android:text="7"
                    android:textSize="55sp"
                    android:background="@drawable/reg_buttons"
                    android:fontFamily="sans-serif-light"
                    android:onClick="seven"


                    />

                <Button
                    android:id="@+id/four"
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:layout_height="0dp"
                    android:text="4"
                    android:textSize="55sp"
                    android:background="@drawable/reg_buttons"
                    android:fontFamily="sans-serif-light"
                    android:onClick="four"
                    />

                <Button
                    android:id="@+id/one"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:text="1"
                    android:textSize="55sp"
                    android:onClick="one"
                    android:background="@drawable/reg_buttons"
                    android:fontFamily="sans-serif-light"/>


            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:orientation="vertical"
                >
                <Button
                    android:layout_height="0dp"
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:text="±"
                    android:textSize="35sp"
                    android:background="@drawable/a_little_darker"
                    android:fontFamily="sans-serif-light"
                    android:onClick="plusMinus"

                    />
                <Button
                    android:id="@+id/eight"
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:layout_height="0dp"
                    android:text="8"
                    android:textSize="55sp"
                    android:background="@drawable/reg_buttons"
                    android:fontFamily="sans-serif-light"
                    android:onClick="eight"
                    />

                <Button
                    android:id="@+id/five"
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:layout_height="0dp"
                    android:text="5"
                    android:textSize="55sp"
                    android:background="@drawable/reg_buttons"
                    android:fontFamily="sans-serif-light"
                    android:onClick="five"

                    />

                <Button
                    android:id="@+id/two"
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:layout_height="0dp"
                    android:text="2"
                    android:textSize="55sp"
                    android:background="@drawable/reg_buttons"
                    android:fontFamily="sans-serif-light"
                    android:onClick="two"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:orientation="vertical"
                >
                <Button
                    android:id="@+id/percent"
                    android:layout_height="0dp"
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:text="%"
                    android:textSize="35sp"
                    android:background="@drawable/a_little_darker"
                    android:fontFamily="sans-serif-light"
                    android:onClick="percent"

                    />
                <Button
                    android:id="@+id/nine"
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:layout_height="0dp"
                    android:text="9"
                    android:textSize="55sp"
                    android:background="@drawable/reg_buttons"
                    android:fontFamily="sans-serif-light"
                    android:onClick="nine"
                    />

                <Button
                    android:id="@+id/six"
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:layout_height="0dp"
                    android:text="6"
                    android:textSize="55sp"
                    android:background="@drawable/reg_buttons"
                    android:fontFamily="sans-serif-light"
                    android:onClick="six"
                    />

                <Button
                    android:id="@+id/three"
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:layout_height="0dp"
                    android:text="3"
                    android:textSize="55sp"
                    android:background="@drawable/reg_buttons"
                    android:fontFamily="sans-serif-light"
                    android:onClick="three"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <Button
                    android:id="@+id/divide"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:text="÷"
                    android:textSize="55sp"
                    android:background="@drawable/button"
                    android:textColor="#ffffff"
                    android:fontFamily="sans-serif-light"
                    android:onClick="divide"
                    />


                <Button
                    android:id="@+id/multiply"
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:layout_height="0dp"
                    android:text="x"
                    android:textAllCaps="false"
                    android:textSize="40sp"
                    android:background="@drawable/button"
                    android:textColor="#ffffff"
                    android:fontFamily="sans-serif-light"
                    android:onClick="multiply" />

                <Button
                    android:id="@+id/minus"
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:layout_height="0dp"
                    android:text="-"
                    android:fontFamily="sans-serif-light"

                    android:textSize="55sp"
                    android:background="@drawable/button"
                    android:textColor="#ffffff"
                    android:onClick="minus"
                    />

                <Button
                    android:id="@+id/plus"
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:layout_height="0dp"
                    android:text="+"
                    android:textSize="55sp"
                    android:background="@drawable/button"
                    android:textColor="#ffffff"
                    android:fontFamily="sans-serif-light"
                    android:onClick="plus"
                    />

            </LinearLayout>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="0dp"
            android:orientation="horizontal">
            <Button
                android:id="@+id/zero"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="match_parent"
                android:text="0"
                android:gravity="start"
                android:paddingLeft="35dp"
                android:paddingTop="10dp"
                android:textSize="55sp"
                android:background="@drawable/reg_buttons"
                android:fontFamily="sans-serif-light"
                android:onClick="zero"/>
            <Button
                android:id="@+id/dot"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:text="."
                android:textSize="55sp"
                android:background="@drawable/reg_buttons"
                android:fontFamily="sans-serif-medium"
                android:onClick="dot"
                />
            <Button
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:text="="
                android:textSize="55sp"
                android:background="@drawable/button"
                android:textColor="#ffffff"

                android:onClick="equals"/>

        </LinearLayout>



    </LinearLayout>

</RelativeLayout>
